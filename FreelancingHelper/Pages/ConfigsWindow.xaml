<Window x:Class="FreelancingHelper.Pages.ConfigsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:FreelancingHelper.ViewModels"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        MouseDown="Window_MouseDown"
        FontFamily="Hack"
        Title="Freelancing Helper"
        Background="{DynamicResource PrimarySolid}"
        Height="220"
        Width="350">

    <Border Margin="1"
            Background="{DynamicResource DarkSolid}"
            Padding="2, 5">
        <StackPanel HorizontalAlignment="Stretch">
            <StackPanel>
                <Button Content="X"
                        HorizontalAlignment="Right"
                        Style="{StaticResource DefaultButton}"
                        FontWeight="Bold"
                        Margin="4, 0"
                        Height="20"
                        Width="20"
                        Command="{Binding Path=CloseCommand}"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Label Content="Primary Color:" Foreground="{DynamicResource PrimarySolid}"/>

                <TextBox Text="{Binding PrimaryColorHex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Height="20"
                         Width="70"
                         MaxLength="8"
                         Foreground="{DynamicResource PrimarySolid}"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         Background="{DynamicResource DarkSolid}"
                         BorderBrush="{DynamicResource PrimarySolid}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
