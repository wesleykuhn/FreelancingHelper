<Window x:Class="FreelancingHelper.Pages.ConfigsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:FreelancingHelper.ViewModels"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        FontFamily="Hack"
        Title="Freelancing Helper"
        Background="{StaticResource CrimsonSolid}"
        Height="220"
        Width="350">

    <Border Margin="1"
            Background="{StaticResource DarkSolid}"
            Padding="2, 5">
        <StackPanel HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal">
                <Label Content="Primary Color:" Foreground="{StaticResource CrimsonSolid}"/>
                
                <TextBox Text="{Binding PrimaryColorText}"
                         Height="20"
                         Width="60"
                         MaxLength="7"
                         Foreground="{StaticResource CrimsonSolid}"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         Background="{StaticResource DarkSolid}"
                         BorderBrush="{StaticResource CrimsonSolid}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
